@page
@model BalconyTickets.Pages.BalconyCreate.IndexModel
@{
}

<br />
<h2>Add Balcony</h2>
<br />

<div class="border container form-fields" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label>Name:&nbsp;</label>
            </div>
            <div class="col-6">
                <input asp-for="Balcony.balcony_name" class="form-control"></input>
            </div>
            <span asp-validation-for="Balcony.balcony_name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>Average Time (mins):&nbsp;</label>
            </div>
            <div class="col-6">
                <input asp-for="Balcony.balcony_average" class="form-control"></input>
            </div>
            <span asp-validation-for="Balcony.balcony_average" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2 offset-2">
                <input type="submit" value="Save" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="/BalconyList/Index" class="btn btn-danger form-control">Cancel</a>
            </div>
        </div>

    </form>
</div>

@section Scripts {  
    <partial name="_ValidationScriptsPartial" />
}