@page
@model BalconyTickets.Pages.UserDelete.IndexModel
@{
}

<br />
<h2>Delete User</h2>
<br />

<div class="border container form-fields" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="User.user_id" />
        <div class="form-group row">
            <div class="col-2">
                <label>Name:&nbsp;</label>
            </div>
            <div class="col-6">
                <input asp-for="User.user_name" class="form-control"></input>
            </div>
            <span asp-validation-for="User.user_name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>Identification:&nbsp;</label>
            </div>
            <div class="col-6">
                <input asp-for="User.user_identification" class="form-control"></input>
            </div>
            <span asp-validation-for="User.user_identification" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2 offset-2">
                <input type="submit" value="Delete" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="/UserList/Index" class="btn btn-danger form-control">Cancel</a>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}